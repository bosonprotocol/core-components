{
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": ["*.md"],
      "message": "chore(release): publish latest [skip ci]",
      "conventionalCommits": true,
      "verifyAccess": false
    }
  },
  "ignoreChanges": [
    "e2e/**",
    "contracts/**",
    "examples/**",
    ".github/**",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.md"
  ]
}
