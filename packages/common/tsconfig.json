{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "esnext",
    "outDir": "dist/esm",
    "target": "esnext"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
