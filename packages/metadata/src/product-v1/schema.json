                "type": "object",
                "properties": {
                  "url": { "type": "string" },
                  "tag": { "type": "string" }
                },
                "required": ["url"]
              },
              "minItems": 1
            },
            "videos": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "url": { "type": "string" },
                  "tag": { "type": "string" }
                },
                "required": ["url"]
              }
            }
          },
          "required": ["images"]
        }
      },
      "packaging": {
        "type": "object",
        "properties": {
          "packageQuantity": { "type": "string" },
          "dimensions": {
            "type": "object",
            "properties": {
              "length": { "type": "string"},
              "width": { "type": "string"},
              "height": { "type": "string"},
              "unit": { "type": "string"}
            },
            "required": ["unit"]
          },
          "weight": {
            "type": "object",
            "properties": {
              "value": { "type": "string"},
              "unit": { "type": "string"}
            },
            "required": ["value", "unit"]
          }
        },
        "required": []
      },
      "required": ["uuid", "version", "title", "description", "productionInformation", "visuals"]
    },
    "variations": {
      "type": "array",
