{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist/esm",
    "moduleResolution": "node",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["**/*.stories.tsx", "./src/stories", "node_modules"]
}
