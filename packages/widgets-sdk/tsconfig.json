{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
