{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist/esm",
    "moduleResolution": "node",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
