{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "es5", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "packages/**/tests/**",
    "packages/**/dist/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist"
  ],
  "references": [
    { "path": "./packages/common" },
    { "path": "./packages/core-sdk" },
    { "path": "./packages/eth-connect-sdk" },
    { "path": "./packages/ethers-sdk" },
    { "path": "./packages/subgraph" },
    { "path": "./packages/widgets" }
  ]
}
